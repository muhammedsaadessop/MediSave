<Window x:Class="MediSave_data_saver.VeiwPatient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediSave_data_saver"
        mc:Ignorable="d"
        Title="VeiwPatient" Height="450" Width="800">
    <Grid>
        <Grid Margin="20">
            <StackPanel>
                <!-- Patient Info Heading -->
                <TextBlock x:Name="txtHeading" FontSize="20" FontWeight="Bold" Foreground="Black" Margin="0,0,0,10"/>

                <!-- Single Text Box for Patient Details -->
                <TextBox x:Name="txtPatientDetails" FontSize="14" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Height="300"/>

                <!-- Export Button -->
                <Button Content="Export" HorizontalAlignment="Right" Margin="0,20,0,0" Padding="10,5"
                    Click="Export_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
